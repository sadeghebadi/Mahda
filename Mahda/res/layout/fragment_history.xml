<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="@drawable/button_hover"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_text_in_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="left" >

            <TextView
                android:id="@+id/btn__refresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_in_list_layout"
                android:gravity="center_vertical|left"
                android:paddingBottom="4dp"
                android:textColor="@color/white_color"
                android:paddingTop="4dp"
                android:text="پاک کردن دستور"
                  android:textSize="@dimen/text_size_small" 
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_text_in_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/btn__refresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_in_list_layout"
                android:gravity="center_vertical|right"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="وضعیت دستور"
                android:textColor="@color/white_color"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_text_in_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/btn__refresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_in_list_layout"
                android:gravity="center_vertical|right"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="نوع دستور"
                android:textColor="@color/white_color"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_text_in_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/btn__refresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_in_list_layout"
                android:gravity="center_vertical|right"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="زمان ارسال دستور"
                android:textColor="@color/white_color"
                android:textSize="@dimen/text_size_xsmall"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_text_in_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/btn__refresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_in_list_layout"
                android:gravity="center_vertical|right"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="دریافت آخرین وضعیت"
                android:textColor="@color/white_color" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_text_in_list_item"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="right"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/lv_history"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>